{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/react@17.0.2"
  },
  "tasks": {
    "dev": "deno run -A https://deno.land/x/aleph@v0.3.0-beta.19/cli.ts dev",
    "build": "DENO_DIR=./ deno run -A https://deno.land/x/aleph@v0.3.0-beta.19/cli.ts build -r",
    "start": "deno run -A https://deno.land/x/aleph@v0.3.0-beta.19/cli.ts start"
  },
  "lint": {
    "files": {
      "exclude": [".aleph", "dist"]
    }
  },
  "fmt": {
    "files": {
      "exclude": [".aleph", "dist"]
    }
  }
}
